<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <!--<TextView-->
            <!--android:id="@+id/header"-->
            <!--android:text="PROFILE"-->
            <!--android:background="#F1E119"-->
            <!--android:textSize="27sp"-->
            <!--android:textAllCaps="true"-->
            <!--android:padding="5dp"-->
            <!--android:textColor="#191203"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent" />-->

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/profile_image"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="Sombuddha Chakravarty"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/college"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:text="Birla Institute of Tecnology and Science,Pilani"
            android:layout_width="180dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/prof_show"
            android:layout_below="@+id/college"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_width="300dp"
            android:text="Prof Show details" />

        <TextView
            android:id="@+id/events"
            android:layout_below="@+id/prof_show"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Events: Razmatazz, Word Wars, Dance Duel"
            android:textAlignment="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/qrcode"
            android:layout_below="@+id/events"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/barcode"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/qrcode"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="Random: AE4586W897AS"
            android:textColor="#fff"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#fff"
            android:id="@+id/emscode"
            android:text="Random: AE4586W897ASDD"
            android:layout_below="@+id/barcode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="#202020"
            android:id="@+id/logout"
            android:text=" LOGOUT "
            android:layout_below="@+id/emscode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:elevation="8dp"
            android:background="@color/eventsBackground"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>